<div class="col-sm-12 day <%= 'hide' if defined?(hidden) %>" id="dt_<%= day["dt"] %>">
  <h1 class="page-header">
    <%= title %>
    <% if defined?(hidden) %>
     <small><a href="#today" class="go-to-day" data-goto="<%= @today["dt"] %>">Back to today</a></small>
    <% end %>
  </h1>
  <div class="panel panel-info">
    <div class="panel-body">
      <div class="today">
        <div class="now">
          <span class="label label-primary"><%= day["weather"][0]["main"] %></span>
          <h1><%= temp day["temp"]["day"] %></h1>
          <h2><%= @data["city"]["name"] %></h2>
        </div>
        <div class="periods">
          <div class="period min">
            <span><%= temp day["temp"]["min"] %></span>
            <p>Minimum</p>
          </div>
          <div class="period">
            <span><%= temp day["temp"]["morn"] %></span>
            <p>Morning</p>
          </div>
          <div class="clearfix"></div>
          <div class="period">
            <span><%= temp day["temp"]["day"] %></span>
            <p>Day</p>
          </div>
          <div class="period evening">
            <span><%= temp day["temp"]["eve"] %></span>
            <p>Evening</p>
          </div>
        </div>
        <div class="more-info">
          <p>Pressure: <strong><%= day["pressure"] %></strong></p>
          <p>Humidity: <strong><%= day["humidity"] %></strong></p>
          <p>Wind speed: <strong><%= day["speed"] %></strong></p>
          <p>Wind Direction: <strong><%= day["deg"] %></strong></p>
        </div>
      </div>
    </div>
  </div>
</div>
